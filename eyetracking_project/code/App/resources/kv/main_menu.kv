#:kivy 2.3.0
<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: None, None
                    size: self.minimum_size
                    CustomLabel:
                        text: 'AEA-VAR'
                        size_hint: None, None
                        size: self.texture_size
                        font_size: '24sp'
                    CustomLabel:
                        text: 'Application for editing articles based on visual attention of reviewers'
                        size_hint: None, None
                        size: self.texture_size
                        font_size: '18sp'
            ButtonLayout:
                CustomButton:
                    text: 'Reader'
                    on_press: app.root.current = 'reading'
                CustomButton:
                    text: 'Screen settings'
                    on_press: app.root.current = 'screen_selector'
                CustomButton:
                    text: 'Analysis'
                    on_press: app.root.current = 'analysis'
                CustomDropDown:
                    id: eye_tracker_selection
                    text: 'Select Eye Tracker'
